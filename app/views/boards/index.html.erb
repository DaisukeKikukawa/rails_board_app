<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
        <%= search_form_for @q, url: boards_path do |f| %>
          <%= f.search_field :title_or_body_cont, class: 'form-control', placeholder: "キーワード検索" %>
          <div class="input-group-append">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        <% end %>
      <!-- ここまで -->
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <%= render @boards %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
  <%= paginate @boards, theme: 'twitter-bootstrap-4' %>
</div>
